<script type="text/template" id="login-form-template">
	<form action="/login" method="post">
	  <div class="form-group">
	    <label>Username</label>
	    <input type="text" name="username" class="form-control username-login">
	  </div>
	  <div class="form-group">
	    <label>Password</label>
	    <input type="password" name="password" class="form-control password-login">
	  </div>
	  <div class="form-group">
	    <button type="submit" class="form-control btn btn-default btn-login btn-submit">LOG IN</button>
	  </div>
	</form>
	<p class="form-error">{{ message }}</p>
</script>