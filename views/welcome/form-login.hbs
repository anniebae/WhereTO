<script type="text/template" id="login-form-template">
	<form class="form-inline" action="/login" method="post">
	  <div class="form-group">
	    <input type="text" name="username" class="form-control username-login" placeholder="Username" autofocus>
	  </div>
	  <div class="form-group">
	    <input type="password" name="password" class="form-control password-login" placeholder="Password">
	  </div>
	  <button type="submit" class="form-control btn btn-default btn-login btn-submit">LOG IN</button>
	</form>
	<p class="form-error">{{ message }}</p>
</script>

