<div class="container-fluid user-header"></div>
<div class="container">
	<div class="row page">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 page-content">
			<div class="row">
				<div class="col-lg-5 col-md-5 col-sm-3 col-xs-12 user-data">
					<img class="img-responsive img-avatar" src="../assets/images/avatar.jpg">
					<h3 class="user-title">{{ user.name }}</h3>
					<h4 class="user-subtitle"> @{{ user.username }}</h4>
				</div>
				<div class="col-lg-7 col-md-7 col-sm-9 col-xs-12 user-list">
					<div class="row list-item">
						<div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 list-desc pull-left">
							<h5 class="user-list-title">{{ user.name }}'s Bookmarks</h5>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 list-total pull-right">
							
							<a href="#"><i class="fa fa-plus"></i></a>
						</div>
					</div>
					{{#each user.places}}
					<div class="row list-item">
						<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 list-icon pull-left">
							<i class="fa fa-map-marker"></i>
						</div>
						<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 list-desc">
							<h5 class="list-item-title">{{this.venue}}</h5>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 list-total pull-right">
							<h5 class="list-item-total">{{this.category}}</h5>

						<form action="/places/{{this._id}}" method="POST">
        			<div class="form-group">
          			<input type="hidden" name="_method" value="DELETE">
          			<input type="hidden" name="placeId" value="{{this._id}}" >
								<button type="submit" class="no-btn"><i class="fa fa-times"></i></button>
        			</div>
      			</form>
							<a href="#"><i class="fa fa-gear"></i></a>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>